<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    tools:context=".Fragment.WorkerProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:layout_marginBottom="?android:attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_worker_profile"
                android:layout_width="229dp"
                android:layout_height="212dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/photo1713238194" />

            <TextView
                android:id="@+id/textView_name_worker_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_worker_profile"
                android:layout_centerHorizontal="true"
                android:text="Jannur"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/textView_email_worker_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_name_worker_profile"
                android:layout_centerHorizontal="true"
                android:text="Jannur003@gmail.com"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/textView_bio_worker_profile"
                android:layout_width="368dp"
                android:layout_height="257dp"
                android:layout_below="@id/textView_email_worker_profile"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rectangle_border"
                android:padding="40dp"
                android:text="Я - профессионал в области цифрового маркетинга, стремлюсь использовать мои знания и опыт для реализации инновационных проектов в сфере цифровых коммуникаций. С более чем 5-летним опытом работы в FAANG, я успешно реализовывал кампании для брендов из топ-100 Forbes."
                android:textColor="@color/white"
                android:textSize="16sp" />

            <android.widget.Button
                android:id="@+id/btnAboutLegal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView_bio_worker_profile"
                android:layout_centerHorizontal="true"
                android:text="Legal rights of employers"
                android:background="@drawable/rectangle_6"
                android:layout_marginTop="16dp" />

            <android.widget.Button
                android:id="@+id/btnAboutHow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnAboutLegal"
                android:layout_centerHorizontal="true"
                android:text="How to create CV"
                android:background="@drawable/rectangle_6"
                android:layout_marginTop="16dp"/>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
